---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Date from "../components/Date.astro";

import { compareAsc } from "date-fns";
import { getCollection } from "astro:content";
const posts = (await getCollection("essays")).sort(
  (a, b) => -compareAsc(a.data.created, b.data.created)
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title="Home" />
    <main>
      <div class="homewrapper">
        <section class="intro">
          <h1>Hi ❤️</h1>
          <p>
            Welcome to my corner of the web space, my name is Alexandre Papin.
          </p>
          <p>
            Here you'll mostly find a collection of thoughts I've forced myself
            to write down and share, hoping they'd get better in the process
          </p>
          <p>
            I hope you'll like them. If you do, tell me about it on <a
              href="https://www.twitter.com/charmide">the twitter</a
            >.
          </p>
        </section>
        <section class="posts">
          <h1>Essays</h1>
          <p class="section-desc">
            Stories, threads of ideas, and long-writing
          </p>

          {
            posts
              .filter((p) => p.data.tags.includes("essay"))
              .map((post) => (
                <a href={`/on/${post.slug}/`} class="post-link">
                  <section>
                    <h3 class="title">{post.data.title}</h3>
                    <span class="date">
                      <Date date={post.data.created} />
                    </span>
                    · <span class="description">{post.data.description}</span>
                  </section>
                </a>
              ))
          }
        </section>
        <section class="posts">
          <h1>Notes</h1>
          <p class="section-desc">
            Units of knowledge, concepts and ideas I keep coming back to.
          </p>
          {
            posts
              .filter((p) => p.data.tags.includes("note"))
              .map((post) => (
                <a href={`/on/${post.slug}/`} class="post-link">
                  <section>
                    <h3 class="title">{post.data.title}</h3>
                    <span class="date">
                      <Date date={post.data.created} />
                    </span>
                    · <span class="description">{post.data.description}</span>
                  </section>
                </a>
              ))
          }
        </section>
      </div>
    </main>
    <style>
      .homewrapper {
        margin: 0 10px;
        padding: 0 1em;

        display: grid;
        grid-template-columns: 340px 340px 340px;
        grid-gap: 2em;
      }

      .homewrapper section {
        width: 100%;
      }

      @media (max-width: 1001px) {
        .homewrapper {
          margin: auto;
          width: 596px;
          grid-template-columns: 1fr;
        }
      }

      .section-desc {
        margin-top: -20px;
        font-size: 0.9em;
        opacity: 0.6;
      }

      .post-link {
        text-decoration: inherit;
        color: inherit;
      }
      .post-link section {
        margin-bottom: 1.4em;
        transition: all 0.2s;
      }
      .post-link section:hover {
        transform: translate3d(0, -8px, 0);
      }
      .post-link .title {
        font-size: 1.2em;
        margin: 0;
      }
      .post-link .description {
        font-size: 0.9em;
      }
      .post-link .date {
        font-size: 0.9em;
        opacity: 0.6;
      }
    </style>
  </body>
</html>
